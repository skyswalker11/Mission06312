@{
    ViewData["Task"] = "List";
}
@model List<Mission0631.Models.EnterTaskSubmission>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column1 {
            float: left;
            width: 50%;
            padding: 200px;
        }
  
        /* Clear floats after the columns */
        .row.after {
            content: "";
            display: table;
            clear: both;
        }

        /* Style the buttons */
        .btn {
            border: none;
            outline: none;
            padding: 12px 16px;
            background-color: #f1f1f1;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #ddd;
            }

            .btn.active {
                background-color: #666;
                color: white;
            }

        div.URGENT {
            position: absolute;
            top: 200px;
            right: 1100px;
            width: 200px;
            height: 100px;
        }

        div.NOTURGENT {
            position: absolute;
            top: 200px;
            right: 400px;
            width: 200px;
            height: 100px;
        }

        div.IMPORTANT {
            writing-mode: vertical-lr;
            text-orientation: mixed;
            position: absolute;
            top: 280px;
            left: 5px;
            width: 20px;
            height: 10px;
        }

        div.UNIMPORTANT {
            writing-mode: vertical-lr;
            text-orientation: mixed;
            position: absolute;
            top: 820px;
            left: 5px;
            width: 20px;
            height: 10px;
        }
    </style>
</head>
<body>


    <div class="row">


        <div class="column" style="background-color:#aaa;">

            <div class="URGENT"> <h3>URGENT </h3> </div>
            <div class="IMPORTANT"> <h3>IMPORTANT </h3> </div>
           
            <div style=" width: 500px; height: 400px; line-height: 3em; overflow:scroll; border:4px #64A19D solid; padding-left: 10px; padding-right: 10px; background-color: #747474   ">
                <table class="table table-bordered table-striped">



                    <thead class="bold">
                        <tr>

                            <td>Task</td>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {


                            @if (x.Quadrant == "Important & Urgent")
                            {
                                <tr>

                                    <td>@x.Task</td>


                                    <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.TaskID">Edit</a></td>
                                    <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                                </tr>
                            }

                        }



                    </tbody>

                </table>
            </div>

            </div>
        <div class="column" style="background-color:#bbb;">


            <div class="NOTURGENT"> <h3>NON-URGENT </h3> </div>
                <div style=" width: 500px; height: 400px; line-height: 3em; overflow:scroll; border:4px #64A19D solid; padding-left: 10px; padding-right: 10px; background-color: #747474   ">

                    <table class="table table-bordered table-striped">

                        <thead class="bold">
                            <tr>

                                <td>Task</td>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var x in Model)
                            {
                                if (x.Quadrant == "Important & Non-Urgent")
                                {
                                    <tr>

                                        <td>@x.Task</td>


                                        <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.TaskID">Edit</a></td>
                                        <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                                    </tr>
                                }
                            }


                    </table>
                </div>
            </div>
            <br />
            <br />



            <div class="row">
                <div class="column" style="background-color:#ccc;">

                    <div class="UNIMPORTANT"> <h3>UNIMPORTANT </h3> </div>
                        <div style=" width: 500px; height: 400px; line-height: 3em; overflow:scroll; border:4px #64A19D solid; padding-left: 10px; padding-right: 10px; background-color: #747474   ">

                            <table class="table table-bordered table-striped">


                                <thead class="bold">
                                    <tr>

                                        <td>Task</td>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        if (x.Quadrant == "Unimportant & Urgent")
                                        {
                                            <tr>

                                                <td>@x.Task</td>


                                                <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.TaskID">Edit</a></td>
                                                <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                                            </tr>
                                        }
                                    }

                            </table>
                        </div>
                    </div>
                </div>
            <div class="column" style="background-color:#ddd;">
                    <div style=" width: 500px; height: 400px; line-height: 3em; overflow:scroll; border:4px #64A19D solid; padding-left: 10px; padding-right: 10px; background-color: #747474   ">

                        <table class="table table-bordered table-striped">

                            <thead class="bold">
                                <tr>

                                    <td>Task</td>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    if (x.Quadrant == "Unimportant & Non-Urgent")
                                    {
                                        <tr>

                                            <td>@x.Task</td>


                                            <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.TaskID">Edit</a></td>
                                            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskID">Delete</a></td>
                                        </tr>
                                    }
                                }
                        </table>
                    </div>
                </div>
            </div>

</body>
</html>
