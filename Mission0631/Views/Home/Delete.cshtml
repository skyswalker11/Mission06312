@{
    ViewData["Title"] = "Delete Application";
}
@model Mission0631.Models.EnterTaskSubmission
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Task?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="List" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskID" />
</form>